@model DataImport.Web.Features.BootstrapData.BootstrapDataIndex.ViewModel[]
@inject DataImport.Web.Services.IHtmlHelperService HtmlHelperService

@{
    ViewBag.Title = "Bootstrap Data";
}

<h2>@ViewBag.Title</h2>

<div style="padding-bottom: 10px;">
    @HtmlHelperService.NavigationButton(Html, "Add Bootstrap Data", "Add")
</div>
<table id="tblBootstrapData" class="table table-striped table-hover table-bordered table-responsive" data-paging="true" data-paging-size="20">
    <thead>
        <tr>
            <th>Bootstrap Name</th>
            <th>Resource</th>
            <th data-sortable="false" data-filterable="false" class="actions">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.ResourceName</td>
                <td class="actions">
                    <a href="@Url.Action("Edit", new { BootstrapDataId = m.Id })" title="Edit"><i class="fas fa-fw fa-pencil-alt"></i></a>
                    <a href="@Url.Action("Delete", new { BootstrapDataId = m.Id })" title="Delete" class="ajax-submit-link"><i class="fas fa-fw fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(function ($) {
            $('#tblBootstrapData').footable().on('click', '.ajax-submit-link', ajaxPostFromHref);
        });
    </script>
}