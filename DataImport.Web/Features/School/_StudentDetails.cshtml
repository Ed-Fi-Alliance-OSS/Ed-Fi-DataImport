@using DataImport.Web.Features.School
@using DataImport.Web.Infrastructure
@model DataImport.Web.Features.School.SchoolDetails.Detail

<h2>Student</h2>
<table id="tblStudents" class="table table-striped table-hover table-bordered table-responsive">
    <thead>
        <tr>
            <th>Student Unique Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Students.Items)
        {
            <tr>
                <td>@s.StudentUniqueId</td>
                <td>@s.FirstName</td>
                <td>@s.LastSurname</td>
            </tr>
        }
    </tbody>
</table>
@{ 
    var previousUrl = Url.Action("StudentDetails", "School", new StudentDetails.Query { SchoolId = Model.Id, PageNumber = Model.Students.PageNumber - 1, ApiServerId = Model.ApiServerId });
    var nextUrl = Url.Action("StudentDetails", "School", new StudentDetails.Query { SchoolId = Model.Id, PageNumber = Model.Students.PageNumber + 1, ApiServerId = Model.ApiServerId }); 
}
@Html.PagingControl(previousUrl, nextUrl, Model.Students)
