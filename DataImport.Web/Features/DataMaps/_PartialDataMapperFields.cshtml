@model DataImport.Web.Features.DataMaps.DataMapperFieldsViewModel

@{
    ViewData["DataSources"] = Model.DataSources;
    ViewData["SourceColumns"] = Model.SourceColumns;
    ViewData["SourceTables"] = Model.SourceTables;
}

@for (int i = 0; i < Model.Mappings.Count; i++)
{
    var mapping = Model.Mappings[i];
    @Html.EditorFor(x => x.Mappings[i], additionalViewData: new
    {
        Depth = 0,
        ResourceMetadata = Model.ResourceMetadata.Single(m => m.Name == mapping.Name),
        ArrayElementName = (string)null
    })
}